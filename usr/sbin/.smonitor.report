#!/bin/bash

. ${__ROOTFS__}/etc/utils/smonitor.in

main() {
	local argc=$#
	local name="$1"
	local count="$2"; count=${count:=3}
	local sleep="$3"; sleep=${sleep:=3}

	if ((argc<1 || argc>3)); then
		return 1
	fi

	sleep ${sleep}

	smonitorc report "${name}" $(get_smonitor_pid "${name}" "${count}")
}

main "$@"
