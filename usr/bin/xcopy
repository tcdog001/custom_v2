#!/bin/bash

main() {
	local argc=$#
	local src="$1"
	local dst="$2"
	local err=0

	if ((2!=argc)); then
		return 1
	fi

	if [ -d "${src}" ]; then
		src=${src%/}/
	elif [ -f "${src}" ]; then
		src=${src%/}
	fi

	rsync -acq --delete --force --stats --partial "${src}" "${dst}"; err=$?
	if ((0!=err)); then
		if [ -d "${src}" ]; then
			rm -fr ${dst}/*
			cp -fpR ${src}/* ${dst}
		else
			cp -f ${src} ${dst}
		fi
	fi

       	sync	
}

main "$@"
