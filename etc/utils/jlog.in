}

__test_jlog() {
	jerror_kvs kvs \
		name sb \
		obj '{"name":"SB"}' \
		big '{"name":"DSB","obj":{"name":"SB"}}' \
		#end

	jerror_KVs KVs \
		name/name1/name2 sb \
		name/obj1/obj2 '{"name":"SB"}' \
		name/big1/big2 '{"name":"DSB","obj":{"name":"SB"}}' \
		#end
}

#
#$1:file
#$2:info...
#
log_with_limit() {
	local file="$1"; shift
	local info="$*"

	local count=$(sed -n '$=' ${file} 2>/dev/null)
	number_check ${count} && {
		if ((count>1000)); then
			sed -i "1,100d" ${file} &> /dev/null
		fi
	}

	echo "${info}" >> ${file}; fsync ${file}
}

#
#$1:tag
#[$2:info...]
#
do_logger() {
	local tag="$1"; shift

	logger -t "${tag}" "$*"
}

#
#$1:tag
#[$2:info...]
#
echo_logger() {
	echo "$@"
	do_logger "$@"
}
