#!/bin/bash

if [[ -z "${__UTILS_RTSYNC_IN__}" ]]; then __UTILS_RTSYNC_IN__=_; else return; fi

. ${__ROOTFS__}/etc/utils/xcopy.in

rtsync() {
	local src="$1"
	local dst="$2"
	local dir event file

	inotifywait -mr -e modify,moved_to,create,delete ${src} \
		| while read dir event file; do
			xcopy ${src} ${dst} 
		done
}

